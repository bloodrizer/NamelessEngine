<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- load default styles and controls -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <useStyles filename="nifty-default-styles.xml" />
  <useControls filename="nifty-default-controls.xml" />

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="start" controller="ui.GameUI">
    <layer id="layer" childLayout="center">

        <!-- simple default console control that displays 25 lines. please note: event notification requires an id -->
        <!-- 
            <control id="console" width="90%" height="90%" name="nifty-console" lines="25" align="center" valign="center" visible="false"/>
        -->
    </layer>

    <layer id="game_ui_layer">
        <!--<control id="chat" name="game_chat" width="100%" height="100%" lines="14" />-->

    </layer>

    <layer id="windows" childLayout="absolute">
      <control id="inventory_window" name="window" title="Inventory" width="500px" height="200px" 
        x="150px"
        y="200px"
        visible="false"
        closeable="false"
        childLayout="vertical"
      >
        <panel childLayout="vertical" backgroundColor="#9f9f9f" height="100%" width="100%">  <!-- main window panel? -->

            <panel heigth="400px" width="480px" childLayout="horizontal" backgroundColor="#9f6f9f">
                <text text="Inventory goes there" style="base-font" align="center" color="#eeef" />
            </panel>


            <panel heigth="200px" width="480px" childLayout="horizontal" valign="bottom" backgroundColor="#002a">
                <!--________________________________________________________-->
                <control id="quickslot1" name="droppable" padding="5px" width="46px" height="46px" align="center">
                  <effect>
                    <onActive name="border" post="true" color="#222f" border="1px" />
                  </effect>
                  <text text="Slot 1" style="base-font" color="#eeef" valign="center" width="100%" />
                </control>
                <!--________________________________________________________-->
                <control id="quickslot2" name="droppable" padding="5px" width="46px" height="46px" align="center">
                  <effect>
                    <onActive name="border" post="true" color="#222f" border="1px" />
                  </effect>
                  <text text="Slot 2" style="base-font" color="#eeef" valign="center" width="100%" />
                </control>
                <!--________________________________________________________-->
            </panel>
        </panel>

      </control>
    </layer>


  </screen>
  <layer id="ui_panel_bottom">
      
  </layer>
</nifty>
